#To display the time takeby each task there is a setting availble which needs to configure at ansible.cfg 

// Ansible.cfg
[defaults]
inventory = hosts
callback_whitelist = profile_tasks
deprecation_warnings = false


#TO skip the fingerprint 
 Two ways of doing it 
 
 Method1 :- Either mention it /etc/ansible/ansible.cfg
 host_key_checking = False
 
 Method2 :-Mention the same inventory
  [newserver:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

Method3:- Save it as the enviroenment variable
export ANSIBLE_HOST_KEY_CHECKING=False

